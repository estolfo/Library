.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{ "data-toggle".to_sym => "collapse", "data-target".to_sym => ".nav-collapse"}
        %span.icon-bar
          %span.icon-bar
            %span.icon-bar
              %a.brand{:href => '/home'} Library
      .nav-collapse
        %ul.nav
          %li
            %a{:href => '/books'}Books
          %li
            %a{:href => '/authors'}Authors
          -unless @user
            %li
              %a{:href => '/register'}Register
        %p.navbar-text.pull-right
          -unless @user.nil?
            %a{:href => "/user/" << @user["email"] << "/profile"} 
              %image{:height => 30, :width => 30, :src => "http://www.gravatar.com/avatar/" << @user['email_hash'] << '.png' }
              #{@user["email"]} 
            |
            %a{:href => "/logout" } Logout

          -else
            %a{:href => '/login'} Login
